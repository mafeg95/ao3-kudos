{
    "manifest_version": 3,
    "name": "Save Kudos on AO3",
    "version": "1.0",
    "description": "Save the fics that you have given Kudos to on AO3",
    "content_scripts": [
        {
            "matches": [
                "https://*.archiveofourown.org/*"
            ], 
            "js": [
                "scripts/content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "ao3-logo.png"
    }
}